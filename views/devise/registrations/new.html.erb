<section class="text-center">
  <div class="text-center">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="header d-flex align-items-center justify-content-between px-4">
        <div>
            <%= link_to image_tag("https://img.icons8.com/ultraviolet/344/long-arrow-left.png"), root_path, class: "back_btn" %>
          </div>
        <%= f.submit "Sign up", class: "bg-none" %>
      </div>
      
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="my-3 px-3">
        <%= f.text_field :name, placeholder: "Full name", autofocus: true, autocomplete: "name", class: "w-100 bg-gray-100 p-2" %>
      </div>

      <div class="my-3 px-3">
        <%= f.email_field :email, placeholder: "email", autofocus: true, autocomplete: "email", class: "w-100 bg-gray-100 p-2" %>
      </div>

      <div class="my-3 px-3">
        <%= f.password_field :password, placeholder: "password (6 characters minimum)", autocomplete: "new-password", class: "w-100 bg-gray-100 p-2"  %>
      </div>

      <div class="my-3 px-3">
        <%= f.password_field :password_confirmation, placeholder: "password confirmation",autocomplete: "new-password", class: "w-100 bg-gray-100 p-2"  %>
      </div>

    <% end %>
    
  </div>
</section>