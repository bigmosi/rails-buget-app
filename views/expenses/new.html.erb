<section class="text-center vh-100">
    <div class="header d-flex align-items-center justify-content-between px-4">
    <div>
        <%= link_to image_tag("https://img.icons8.com/ultraviolet/344/long-arrow-left.png"), root_path, class: "back_btn" %>
    </div>
        <h4 class="text-white">New Transaction</h4>
    </div>

    <div class="mx-2">
        <%= form_with model: @expense do |form| %>
            <div class="my-3 px-3">
                <%= form.text_field :name, placeholder: "Expense Name", require: true, class: 'w-100 bg-gray-100 p-2' %>
            </div>
            <div class="my-3 px-3">
                <%= form.number_field :amount, in: 1.0..1000.0, step: 0.5, placeholder: "Amount", require: true, class: 'w-100 bg-gray-100 p-2' %>
            </div>
            <div class="my-3 px-3">
                <%= form.collection_select :category_id, @categories, :id, :name,:prompt => true, require: true, class: 'w-100 bg-gray-100 p-2'  %>
            </div>
            <div class="form-group">
                <%= form.submit %>
            </div>
        <% end %>
    </div>

</section>
