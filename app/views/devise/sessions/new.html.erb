<section class="text-center">
  <div class="text-center">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="header d-flex align-items-center justify-content-between px-4">
        <div>
          <%= link_to image_tag("https://img.icons8.com/ultraviolet/344/long-arrow-left.png"), root_path, class: "back_btn" %>
        </div>
        <div class="text-white fw-light m-3"><%= f.submit "Log In", class: "bg-none" %></div>
      </div>

      <div class="my-3 px-3">
        <%= f.email_field :email, autofocus: true, placeholder: "Email", autocomplete: "email", class: "w-100 bg-gray-100 p-2" %>
      </div>

      <div class="my-3 px-3">
        <%= f.password_field :password, placeholder: "Password",autocomplete: "current-password", class: "w-100 bg-gray-100 p-2" %>
      </div>          
    <% end %>
    
    <%= render "devise/shared/links" %>
  </div>
</section>